<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/material_card_edge_margin"
    android:layout_marginTop="@dimen/material_list_normal_padding_vertical"
    android:layout_marginRight="@dimen/material_card_edge_margin"
    android:layout_marginBottom="@dimen/material_list_normal_padding_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/material_baseline_grid_0.5x"
    app:cardElevation="@dimen/material_card_elevation_resting"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_card_title_block_large_padding_bottom"
        android:background="?attr/selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedrect_shape_black"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/material_baseline_grid_1x"
            android:paddingTop="@dimen/material_baseline_grid_0.5x"
            android:paddingRight="@dimen/material_baseline_grid_1x"
            android:paddingBottom="@dimen/material_baseline_grid_0.5x"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorPrimaryInverse"
            app:layout_constraintBottom_toTopOf="@+id/barrier4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media" />

        <ImageView
            android:id="@+id/button_bookmark"
            android:layout_width="@dimen/material_list_icon_size"
            android:layout_height="@dimen/material_list_icon_size"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_options"
            app:layout_constraintTop_toBottomOf="@+id/media"
            app:srcCompat="@drawable/ic_check_bookmark"

            app:tintMode="src_in" />

        <ImageView
            android:id="@+id/button_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media"
           android:src="@drawable/ic_more_vert_black_24dp"
            app:tint="@color/list_item_action_color"
            app:tintMode="src_in" />

        <TextView
            android:id="@+id/text_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/barrier4" />

        <ImageView
            android:id="@+id/media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/material_color_black_06_percent"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/media_overlay"
            android:layout_width="@dimen/material_icon_size_product"
            android:layout_height="@dimen/material_icon_size_product"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape_translucent"
            android:clickable="false"
            android:padding="2dp"
            android:tint="@color/material_color_white"
            app:layout_constraintBottom_toBottomOf="@+id/media"
            app:layout_constraintEnd_toEndOf="@+id/media"
            app:layout_constraintStart_toStartOf="@+id/media"
            app:layout_constraintTop_toTopOf="@+id/media"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

        <TextView
            android:id="@+id/link_domain"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_headline" />

        <TextView
            android:id="@+id/text_published_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="@dimen/material_baseline_grid_0.5x"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link_domain" />

        <TextView
            android:id="@+id/text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="@dimen/material_baseline_grid_0.5x"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_published_at"
            app:layout_constraintStart_toEndOf="@+id/text_published_at" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          app:barrierDirection="left"
            app:constraint_referenced_ids="text_category,button_bookmark,button_options,media_overlay,media" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>