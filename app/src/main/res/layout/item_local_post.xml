<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.applifehack.knowledge.data.entity.Post" />

        <variable
            name="viewModel"
            type="com.applifehack.knowledge.ui.admin.localpost.LocalPostVM" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/feed_hero_gradient_background">

        <RelativeLayout
            android:id="@+id/feed_hero_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_above="@id/linBottom"

            android:layout_alignParentTop="true"
            android:fitsSystemWindows="true">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/feed_hero_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_below="@id/txtTitle"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:fitsSystemWindows="true"
                android:layout_above="@id/txtDescription"
                app:srcImageBitmapUrl="@{item.imageUrl}"
                android:onClick="@{(view)->viewModel.openPostDetail(item,view)}"
                />

            <TextView
                style="@style/text_roboto_bold_h1"
                android:id="@+id/txtTitle"
                android:text="@{item.title}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/white"
                tools:text="hello abc" />

            <TextView
                android:id="@+id/txtDescription"
                style="@style/text_roboto_italic_h2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                android:text="@{item.image_caption}"
                android:textColor="@color/white"
                tools:text="hello abc" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/vBottom"

            android:layout_marginTop="-5dp"
            android:background="@color/darker_gray"
            android:layout_height="16dp"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/vBottom"
            android:background="@drawable/bg_item_feed_bottom"
            android:orientation="horizontal"
            android:paddingTop="8dp"

            android:paddingBottom="8dp">

            <CheckBox
                android:id="@+id/check_send_push"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:civ_fill_color="@color/white_75"
                android:onCheckedChanged="@{(compoundButton, checked) ->viewModel.checkPush(checked)}"

                android:src="@drawable/ic_author_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSendPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:fontFamily="@font/cabin_condensed_regular"
                android:gravity="center"
                android:text="Send Push"
                android:textColor="@color/white_75"
                app:layout_constraintBottom_toBottomOf="@id/check_send_push"

                app:layout_constraintStart_toEndOf="@+id/check_send_push"
                app:layout_constraintTop_toTopOf="@id/check_send_push"
                />

            <CheckBox
                android:id="@+id/check_push_style"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:civ_fill_color="@color/white_75"

                android:src="@drawable/ic_author_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvSendPush"
                android:onCheckedChanged="@{(compoundButton, checked) ->viewModel.checkPushStyle(checked)}"


                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvPushStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:fontFamily="@font/cabin_condensed_regular"
                android:gravity="center"
                android:text="Push Image Style"
                android:textColor="@color/white_75"
                app:layout_constraintBottom_toBottomOf="@id/check_push_style"

                app:layout_constraintStart_toEndOf="@+id/check_push_style"
                app:layout_constraintTop_toTopOf="@id/check_push_style"
                />



            <TextView
                android:id="@+id/tvPostNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_readmore"
                android:fontFamily="@font/cabin_condensed_regular"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="@string/post_now"
                android:onClick="@{(view)->viewModel.postNow(item)}"
                android:textColor="@color/white_75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="65dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_readmore"
                android:fontFamily="@font/cabin_condensed_regular"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="@string/skip"
                android:onClick="@{(view)->viewModel.skip(item)}"
                android:textColor="@color/white_75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPostNow"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/shareLayout"


            android:padding="@dimen/eight"
            android:background="@drawable/bg_item_feed_bottom"
            android:layout_above="@id/vBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"



            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                app:srcCompat="@drawable/play_store" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"

                app:srcCompat="@drawable/web_app_icon" />
        </LinearLayout>

    </RelativeLayout>
</layout>