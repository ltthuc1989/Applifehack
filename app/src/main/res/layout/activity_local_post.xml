<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.applifehack.knowledge.databinding.ItemLocalPostBinding" />

        <import type="com.applifehack.knowledge.data.entity.Post" />


        <variable
            name="viewModel"
            type="com.applifehack.knowledge.ui.admin.localpost.LocalPostVM" />

        <variable
            name="adapter"
            type="com.ezyplanet.core.ui.base.adapter.SingleLayoutAdapter&lt;Post, ItemLocalPostBinding&gt;" />
    </data>

    <LinearLayout
        android:id="@+id/daily_feed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPost"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="?attr/actionBarSize"
            >
            <TextView
                android:layout_width="wrap_content"
                android:text="Random"
                android:textColor="@color/bright_blue"
                android:layout_gravity="center_vertical|left"
                android:onClick="@{()->viewModel.randomPost()}"

                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                tools:text="Export"
                android:text="@{viewModel.postSize}"
                android:textColor="@color/bright_blue"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:onClick="@{()->viewModel.exportDatabse()}"


                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Publish"
                android:textColor="@{viewModel.isRandom()?@color/bright_blue:@color/white_50}"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="18dp"
                android:enabled="@{viewModel.isRandom()}"

                android:textSize="18sp"
                android:onClick="@{()->viewModel.publish()}"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daily_feed_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darker_gray"
                android:paddingTop="8dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:adapter="@{adapter}"
                android:orientation="vertical"
                android:overScrollMode="always"
                app:layoutManager="com.ezyplanet.core.ui.widget.scroll.LinearLayoutManagerWrapper"
                />


            <ProgressBar
                android:id="@+id/daily_feed_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:indeterminate="true"
                android:visibility="gone" />


        </FrameLayout>


    </LinearLayout>


</layout>