<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="model"
            type="com.applifehack.knowledge.data.entity.Post" />
        <variable
            name="listener"
            type="com.applifehack.knowledge.ui.widget.listener.QuoteViewListener" />

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <!--Blur Layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blurBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:id="@+id/blurMask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5" />
        </RelativeLayout>



        <!--Card View-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Background-->
                <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                <!--Gradient-->
                <FrameLayout
                    android:id="@+id/gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5" />

                <!--Quote-->
                <TextView
                    android:id="@+id/quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:letterSpacing="0.05"
                    android:textColor="@color/white"
                    android:fontFamily="@font/cabin_condensed_regular"
                    app:autoResizeTextMax="@{36}"
                    app:autoResizeTextMin="@{14}"
                    android:text="@{model.title}"
                    app:autoSizeTextType="uniform" />

                <!--Author-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/authorCard"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/quote"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:onClick="@{()->listener.openAuthorWiki(model.authorUrl)"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:id="@+id/authorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:letterSpacing="0.1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@{model.author}"
                        android:textColor="@color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!--Progress Image-->
                <ProgressBar
                    android:id="@+id/progressImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--Progress-->
        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />



    </RelativeLayout>
</layout>