<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_hero_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darker_gray"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/feed_hero_collapsing_toolbar"
        style="@style/DefaultActionBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darker_gray"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:minHeight="@dimen/feed_hero_minHeight"
        android:visibility="invisible"
        app:collapsedTitleTextAppearance="?attr/feedCollapsedToolbarStyle"
        app:contentScrim="@android:color/black"
        app:expandedTitleMarginBottom="0dp"
        app:expandedTitleTextAppearance="?attr/feedExpandedToolbarStyle"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimAnimationDuration="200">

        <ImageView
            android:id="@+id/feed_hero_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_indicator_height"
            android:layout_gravity="bottom|center_vertical|center_horizontal|center"
            android:background="@color/white_50"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.3" />

        <TextView
            android:id="@+id/feed_hero_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start"
            android:background="@drawable/feed_hero_gradient_background"
            android:gravity="bottom|left|center_vertical|center_horizontal|center|start"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize"
            app:layout_collapseMode="parallax"
            android:textColor="@color/white"
            app:layout_collapseParallaxMultiplier="0.3">


        </TextView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/feed_hero_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top|center_vertical|center_horizontal|center"
            android:layout_marginBottom="?attr/actionBarSize"
            android:background="@null"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/feed_hero_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom|center_vertical|center_horizontal|center"
            android:background="@null"
            android:elevation="6dp"
            android:visibility="gone"
            app:tabIndicatorColor="@color/brighter_blue"
            app:tabIndicatorHeight="@dimen/tab_indicator_height"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabPadding="-1dp"
            app:tabSelectedTextColor="@color/brighter_blue"
            app:tabTextColor="@color/white_50" />
</com.google.android.material.appbar.AppBarLayout>
