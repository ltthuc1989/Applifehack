<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="text_roboto">
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="text_roboto_header">
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="text_roboto_h1">
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="text_roboto_bold_h1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="text_roboto_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="themeBackground">@android:color/black</item>
        <item name="actionMenuTextColor">#ffffff</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        //ActionBarDrawerToggle设置颜色
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <!--<style name="SplashTheme" parent="AppTheme">-->
    <!--<item name="android:windowBackground">@drawable/splash_bg</item>-->
    <!--<item name="android:windowIsTranslucent">false</item>-->
    <!--</style>-->

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="themeBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="SettingTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="themeBackground">@android:color/black</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="elevation">8dp</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="SubjectTextLabel">
        <item name="android:textSize">@dimen/subject_card_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_base</item>
        <item name="android:maxLines">3</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:paddingStart">@dimen/padding_base</item>
        <item name="android:paddingEnd">@dimen/padding_base</item>
    </style>

    <style name="FeedCarouselTagLabel">
        <item name="android:textSize">@dimen/subject_card_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tag_button_background_white</item>
        <item name="android:paddingTop">@dimen/padding_base_h</item>
        <item name="android:paddingBottom">@dimen/padding_base_h</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/padding_base</item>
        <item name="android:paddingEnd">@dimen/padding_base</item>
    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="RatingBar">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlNormal">@color/lightest_gray</item>
    </style>
    <style name="AppCompatAlertDialogStyle"/>
    <style name="AppCompatAlertDialogStyle.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#bbbbbb</item>
        <item name="android:textColor">@color/lightest_gray</item>
        <item name="android:background">#222222</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">#5fa3d0</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#bbbbbb</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorPrimaryDark">#3367d6</item>

    </style>

    <style name="AppCompatAlertDialogStyle.Light">
        <item name="android:textColorPrimary">#888888</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="colorAccent">#5fa3d0</item>
        <item name="colorPrimary">#444444</item>
        <item name="colorPrimaryDark">#3367d6</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#3367d6</item>
    </style>
</resources>