<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="text_roboto">
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="text_roboto_header">
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="text_roboto_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="edt_border_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/bg_edt_solid_white_border_gray</item>
        <item name="android:textColor">@color/app_444444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="bt_border_gray">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bg_btn_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>

    </style>
    <style name="bt_border_green">
        <item name="android:layout_height">45dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_bt_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>

    </style>
    <style name="bt_border_red">
        <item name="android:layout_height">45dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_bt_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>

    </style>
</resources>
